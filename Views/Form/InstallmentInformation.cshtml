@{

    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.title = "Installment Information";
}

<!-- Imported styles on this page -->
<link rel="stylesheet" href="~/assets/js/daterangepicker/daterangepicker-bs3.css">

<!-- Imported scripts on this page -->
<script src="~/assets/js/bootstrap-datepicker.js"></script>

<div>


    <ol class="breadcrumb bc-3">
        <li>
            <a href="/Home/Index"><i class="fa-home"></i>Home</a>
        </li>
        <li>

            <a href="/Form/AdvanceSalary">Forms</a>
        </li>
        <li class="active">

            <strong>Installment Information</strong>
        </li>
    </ol>

    <h2>Installment Information</h2>
    <br />


    <div class="row">
        <div class="col-md-12">
            <form role="form" class="form-horizontal">


                <div class="row">


                    <div class="col-md-8">
                        <div class="form-group">
                            <label class="col-sm-5 control-label">Branch</label>
                            <div class="col-sm-5">
                                <select class="form-control">
                                    <option>Branch 1</option>
                                    <option>Branch 2</option>
                                    <option>Branch 3</option>
                                    <option>Branch 4</option>
                                    <option>Branch 5</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-sm-5 control-label">Employee Name</label>
                            <div class="col-sm-5">
                                <select class="form-control">
                                    <option>Employee 1</option>
                                    <option>Employee 2</option>
                                    <option>Employee 3</option>
                                    <option>Employee 4</option>
                                    <option>Employee 5</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="field-1" class="col-sm-5 control-label">Advance Amount</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="field-1" placeholder="Advance Amount">
                            </div>
                        </div>

                        <div class="form-group">
                            <label class="col-sm-5 control-label">Date</label>

                            <div class="col-sm-5">
                                <div class="input-group">
                                    <input type="text" class="form-control datepicker" data-format="D, dd MM yyyy" placeholder="Date">

                                    <div class="input-group-addon">
                                        <a href="#"><i class="entypo-calendar"></i></a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="field-1" class="col-sm-5 control-label">No. Of Installments</label>
                            <div class="col-sm-5">
                                <input type="number" class="form-control" id="field-3" placeholder="No. of Installments">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="field-1" class="col-sm-5 control-label">Installment Amount</label>
                            <div class="col-sm-5">
                                <input type="text" class="form-control" id="field-4" placeholder="Installment Amount">
                            </div>
                        </div>


                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <div class="col-sm-4">
                                <img src="~/assets/images/burjkhalifa.jpg" width="150" height="150">
                            </div>
                        </div>

                        <div class="form-group">
                            <label for="field-5" class="col-sm-4">Employee ID</label>

                        </div>
                        <div class="form-group">
                            <div class="col-sm-4">
                                <input type="text" class="form-control-static" id="field-5" placeholder="Employee 123" disabled>
                            </div>
                        </div>
                        <br />
                        <br />

                        <div class="form-group">

                            <div class="col-sm-2">
                                <button type="submit" class="btn btn-default">Save</button>

                            </div>
                            <div class="col-sm-2">

                                <button type="reset" class="btn btn-default">Cancel</button>
                            </div>
                        </div>

                    </div>

                </div>
            </form>
        </div>
    </div>



</div>

